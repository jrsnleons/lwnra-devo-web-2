{
    "buildCommand": "bun run build",
    "outputDirectory": ".next",
    "installCommand": "bun install",
    "framework": "nextjs",
    "functions": {
        "app/**/*.{js,ts,tsx}": {
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "origin-when-cross-origin"
                }
            ]
        },
        {
            "source": "/(icon|apple-icon|opengraph-image)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=86400, stale-while-revalidate=31536000"
                },
                {
                    "key": "Content-Type",
                    "value": "image/png"
                }
            ]
        },
        {
            "source": "/favicon.ico",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/home",
            "destination": "/",
            "permanent": true
        }
    ]
}
